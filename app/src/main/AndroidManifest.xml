<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enduser.overwatchleague">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.enduser.overwatchleague.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.enduser.overwatchleague.QueryActivity"></activity>

        <provider
            android:exported="false"
            android:authorities="com.example.enduser.overwatchleague"
            android:name=".OverwatchTeamProvider"/>
        <service
            android:name=".UpdateTeamService"
            android:exported="false"
            />

    </application>

</manifest>