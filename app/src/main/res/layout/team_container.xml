<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="@dimen/small_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_team_image"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/team_image_height" />
        <TextView
            android:textSize="@dimen/text_size_title"
            android:id="@+id/tv_team_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_below="@+id/iv_team_image"
            tools:text="Team name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="@string/match_wins"
            android:id="@+id/tv_match_wins"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_below="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            tools:text="0"
            android:layout_below="@+id/tv_team_name"
            android:layout_toRightOf="@+id/tv_match_wins"
            android:id="@+id/tv_team_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/match_loss"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_below="@+id/tv_match_wins"
            android:id="@+id/tv_match_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="34"
            android:layout_below="@+id/tv_match_wins"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_toRightOf="@+id/tv_match_loss"
            android:id="@+id/tv_team_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/match_draw"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_below="@+id/tv_match_loss"
            android:id="@+id/tv_match_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="24"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_toRightOf="@+id/tv_match_draw"
            android:layout_below="@+id/tv_match_loss"
            android:id="@+id/tv_team_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="55"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_below="@+id/tv_team_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:id="@+id/tv_game_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_below="@+id/tv_team_name"
            android:layout_toLeftOf="@+id/tv_game_wins"
            android:text="@string/game_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="65"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:id="@+id/tv_game_loss"
            android:layout_below="@+id/tv_game_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_below="@+id/tv_game_wins"
            android:text="@string/game_loss"
            android:layout_toLeftOf="@+id/tv_game_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_game_loss"
            android:layout_marginRight="@dimen/horizontal_margin"
            tools:text="56"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_game_tie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_below="@+id/tv_game_loss"
            android:text="@string/game_tie"
            android:layout_toLeftOf="@+id/tv_game_tie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>