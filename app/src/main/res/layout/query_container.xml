<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/query_container_height"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/horizontal_margin"
                android:id="@+id/iv_team_logo"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_height" />

            <TextView
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_alignTop="@+id/iv_team_logo"
                android:id="@+id/tv_team_name"
                android:textStyle="bold"
                android:textSize="@dimen/team_name"
                tools:text="Team Name"
                android:layout_toRightOf="@+id/iv_team_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_below="@+id/tv_team_name"
                android:layout_toRightOf="@+id/iv_team_logo"
                android:text="@string/subscribe_button"
                android:id="@+id/bt_detail"
                android:layout_margin="@dimen/horizontal_margin"
                android:layout_width="@dimen/query_button_width"
                android:layout_height="@dimen/query_button_height" />

    </RelativeLayout>

</android.support.v7.widget.CardView>